            value = input("{0}: ".format(active_attribute))
            if active_attribute in int_attributes:
                #error handling
                try:
                    value = int(value)
                except ValueError:
                    print("Invalid value for {0}, defaulted to 0.".format(active_attribute))
                    value = 0
